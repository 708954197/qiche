<script type="text/javascript" src="js/PageNav.js"></script>
<script type="text/javascript" src="/js/jquery.min.js"></script>
<script type="text/javascript" src="/js/bootstrap.min.js"></script>
<script type="text/javascript">
    //获取所有的车类
    $.get("/getleibie",function(data){
        $.each(data.results,function(i, n){
            //创建一个tr标签
            $(' <option>'+n.name +'</option>').appendTo($('#kerenxuanze'));
        });
    });


        // <!--增加按钮-->
        $("#btn").click(function () {
            $.post("/student",{
                id : parseInt($("input[name=id]").val()),
                name : $("input[name=name]").val(),
                pwd:$('select[name=kerenxuanze]').val(),
                price : $("input[name=price]").val(),
                flag : $("input[name=flag]").val()
            },function(data){
                if(data.result == 1){
                    alert("提交成功！");
                    $("input[type=text]").val("");
                    window.location.href="/chelei";
                }else if(data.result == -1){
                    alert("提交失败，学号被占用！");
                }else if(data.result == -2){
                    alert("服务器错误！请联系管理员，怎么联系我也不知道！");
                }
            })
        })



        $("#tbody").delegate("#check","click",function(){
            var sid = $(this).attr("data-sid");
            console.log(sid);
            $("#editor").click(function () {
                // console.log(sid);
                $.get("/student/"+sid,function (data) {
                    $("#boxul").empty();
                    $("input[name=ids]").val(data.info.id);
                    $("input[name=names]").val(data.info.name);
                    $("input[name=pwds]").val(data.info.pwd);
                    $("input[name=prices]").val(data.info.price);
                    $("input[name=flags]").val(data.info.flag);
                })

                // window.location = "/student/" + sid;
                $("#btn1").click(function(){
                    // console.log(sid);

                    console.log($("input[name=date]").val())
                    $.post("/student/" + sid,{
                        id:$("input[name=ids]").val(),
                        name : $("input[name=names]").val(),
                        pwd : $("input[name=pwds]").val(),
                        price : $("input[name=prices]").val(),
                        flag : $("input[name=flags]").val()
                    },function(data){
                        if(data.result == 1){
                            alert("修改成功！");
                            window.location = "/chelei";
                        }else{

                        }
                    })
                });
            })

            // window.location = "/student/" + sid;
        });
    //删除按钮
    $("#tbody").delegate("#check","click",function(){
        var sid = $(this).attr("data-sid");
        // console.log(sid);
        $("#del").click(function () {
            $.ajax({
                url : "/student/" + sid,
                type : "delete",
                success : function(data){
                    if(data.result == 1){
                        alert("删除成功");
                        window.location.href="/";
                        $this.parents("tr").remove();
                    }else{
                        alert("服务器错误！");
                    }
                }
            });


        })

        // window.location = "/student/" + sid;
    });



    //请求一次，创建分页条
    $.get("/student?page=1",function(data){
        //分页条
        new PageNav({
            boxid : "pagenavbox",
            page : 1,
            pageAmount : data.pageAmount,
            change : function(pagenumber){
                gotopage(pagenumber);
            }
        });

        gotopage(1);
    });
    //Ajax请求，请求JSON数据
    function gotopage(pagenumber){
        //清空
        $("#tbody").empty();
        //获得新的数据
        $.get("/student?page=" + pagenumber,function(data){
            $.each(data.results,function(i, n){
                // console.log(n);
                //创建一个tr标签
                $tr = $("<tr></tr>");
                $("<td><input type='radio' id='check'  data-sid='" + n.id +"' name='cicici'/></td>").appendTo($tr);
                $("<td></td>").html(n.id).appendTo($tr);
                $("<td></td>").html(n.name).appendTo($tr);
                $("<td></td>").html(n.pwd).appendTo($tr);
                $("<td></td>").html(n.price).appendTo($tr);
                $("<td></td>").html(n.flag).appendTo($tr);
                $tr.appendTo($("#tbody"));
            });
        });
    }


    $("#tui").click(function () {
        $.get("/tui" ,function (data) {
            console.log(data.resul);
            if (data.resul == 1){
                alert("退出成功");
                window.location.href = "/login"
            } else{
                alert("退出失败")
            }
        })
    })
</script>
