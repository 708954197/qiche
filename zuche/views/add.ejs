<script type="text/javascript">
    //点击提交按钮的时候做的事情
    $("#btn").click(function(){
        $.post("/studentc",{
            sid : parseInt($("input[name=sid]").val()),
            yonghuming : $("input[name=yonghuming]").val(),
            dianhua : parseInt($("input[name=dianhua]").val()),
            dizhi : $("input[name=dizhi]").val(),
            shenfengzheng : $("input[name=shenfengzheng]").val(),
            jiazhao : $("input[name=jiazhao]").val(),
        },function(data){
            if(data.result == 1){
                window.localtion = '/kerenchaxun';
            }
        })
    });

    $("#tui").click(function () {
        $.get("/tui" ,function (data) {
            console.log(data.resul);
            if (data.resul == 1){
                alert("退出成功");
                window.location.href = "/login"
            } else{
                alert("退出失败")
            }
        })
    })
